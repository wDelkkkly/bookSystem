<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wly.mapper.ReaderMapper">

    <select id="list" resultType="com.wly.pojo.Reader">
        select * from user
    </select>


    <insert id="addReader">
        insert into user (username,password)
        values (#{username},#{password})
    </insert>

    <delete id="deleteReader">
        delete from user where id=#{id}
    </delete>

    <select id="getReaderById" resultType="com.wly.pojo.Reader">
        select * from user where id=#{id}
    </select>

    <select id="queryUserByNameAndPassword" resultType="com.wly.pojo.Reader">
        select * from user where username=#{username} and password=#{password}
    </select>

    <update id="updateReader">
        update user set username=#{username},password=#{password}
        where id=#{id}
    </update>

</mapper>
