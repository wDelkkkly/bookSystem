<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wly.mapper.AdminMapper">

    <select id="list" resultType="com.wly.pojo.Admin">
        select * from admin
    </select>


    <insert id="addAdmin">
        insert into admin (username,password)
        values (#{username},#{password})
    </insert>

    <delete id="deleteAdmin">
        delete from admin where id=#{id}
    </delete>

    <select id="getAdminById" resultType="com.wly.pojo.Admin">
        select * from admin where id=#{id}
    </select>

    <select id="queryUserByNameAndPassword" resultType="com.wly.pojo.Admin">
        select * from admin where username=#{username} and password=#{password}
    </select>

    <update id="updateAdmin">
        update admin set username=#{username},password=#{password}
        where id=#{id}
    </update>

</mapper>
